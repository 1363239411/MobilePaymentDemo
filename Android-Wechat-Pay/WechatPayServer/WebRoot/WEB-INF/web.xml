<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.0"
    xmlns="http://java.sun.com/xml/ns/javaee"
    xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
    xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd">
  <servlet>
    <servlet-name>UnifiedOrderServlet</servlet-name>
    <servlet-class>com.pay.wechat.servlet.UnifiedOrderServlet</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>UnifiedOrderServlet</servlet-name>
    <url-pattern>/UnifiedOrderServlet</url-pattern>
  </servlet-mapping>
  
  <servlet>
    <servlet-name>WechatPayCallBack</servlet-name>
    <servlet-class>com.pay.wechat.servlet.WechatPayCallBack</servlet-class>
  </servlet>

  <servlet-mapping>
    <servlet-name>WechatPayCallBack</servlet-name>
    <url-pattern>/WechatPayCallBack</url-pattern>
  </servlet-mapping>
  

</web-app>